@{
  Layout="Shared/_Layout.cshtml";
}

<h1 class="text-center">Cuisines</h1>
@if(Model.Count == 0)
{
  <h3>You have not added any cuisines yet!</h3>
}
@foreach(var cuisine in Model)
{
  <h4><a href="/cuisine/@cuisine.GetId()">@cuisine.GetName()</a></h4>
}
<a href="/cuisine/new"><button type="submit" class="btn btn-info">Add a new cuisine</button></a>
